		CD %DROOLS%
		CALL %COMPILAR_MODO_NORMAL%)
	IF %STATUS_PERSISTENCE% EQU TRUE (
		CD %PERSISTENCE%
		CALL %COMPILAR_MODO_NORMAL%)
	IF %STATUS_WEB% EQU TRUE (
		CD %WEB%
		CALL %COMPILAR_MODO_NORMAL%)
	CD %RAIZ%